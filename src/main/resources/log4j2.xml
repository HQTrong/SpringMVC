<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="logPath">${bundle:log4j2:project.path}</Property>
    </Properties>
    <Appenders>
        <File name="File" fileName="Log.log">
            <PatternLayout pattern="%d %-5p [%c{1}] %m%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>